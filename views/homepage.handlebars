  </div>
</div>
{{#each reviews as |review| }}

<div class="newsfeedContainer">
  <div class="profileContainer">
    <h1>{{review.name}}</h1> <br>
    <a> Post Made At: {{format_date review.date_created}} </a> <br>
    <p id="sizeOfCarContainer">{{review.carSize}}</p>
    <p id="typeOfCarContainer">{{review.name}} Drives A: {{review.carMake}}</p>
  </div>
  <div class="newsfeed">
    <h1 id="titleText">{{title}}</h1>

    {{!-- If we have time lets add a href to the anchor tag so the address will be clickable --}}
    <a id="addressContainer" href="http://www.google.com/search?q={{review.address}}"
      target="_blank">{{review.address}}</a> <br>
    {{!-- Couldnt figure out the mechanics behind this system --}}
    {{!-- <a class="fa fa-star" id="1starFinal"></a>
    <a class="fa fa-star" id='2starFinal'></a>
    <a class="fa fa-star" id="3starFinal"></a>
    <a class="fa fa-star" id="4staFinalr"></a>
    <a class="fa fa-star" id="5staFinalr"></a> --}}
    <p id="parkingType">{{review.parkingType}}</p>
    <p class="postInfo">
      {{review.description}}
    </p>
  </div>
</div>

{{/each}}

