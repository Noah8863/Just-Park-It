<div class="nav-body">
  <div class="navigation">
    <ul>
      <li class="list active">
        <a href="/">
          <span class="icon">
            <i class="fa-solid fa-house"></i>
          </span>
          <span class="text">Home</span>
        </a>
      </li>
      <li class="list">
        <a href="/dashboard">
          <span class="icon">
            <i class="fa-solid fa-square-plus"></i>
          </span>
          <span class="text">New Post</span>
        </a>
      </li>
      <li class="list">
        <a href="#">
          <span class="icon">
            <i class="fa-solid fa-user"></i>
          </span>
          <span class="text">Profile</span>
        </a>
      </li>
      <li class="list">
        <a href="https://github.com/Noah8863/Just-Park-It" target="_blank">
